[flake8]
max-line-length = 100
extend-ignore = E203, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    .ruff_cache
per-file-ignores =
    __init__.py:F401
    tests/*:E402
    src/orchestration_reference.py:E128,F811
    src/data/apis/_http.py:C901
    src/data/apis/world_bank.py:C901
max-complexity = 10
